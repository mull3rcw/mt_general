copy2tftp () {
    if [ -z "$1" ]
    then
        echo "-\n\n\n Error!!!! Parameter 1 is missing\n"
        exit 0
    else
        echo "-P1 is \"$1\"."
    fi

    SRC=$1
    SRC_NAME=$(basename $1)

	[[ -f "$1" ]] && echo "" || echo -e "\n\nCheck OUTPUT dir, is it correct? ex. 'output'\n\n"

    if [ "$2" ]
    then
        echo "-P2 is \"$2\"."
    else
        echo "EMPTY"
        exit 0
    fi

	TFT_LINK=/tftpboot/"$2"
	mkdir -p $TFT_LINK
    cp "$1" "$TFT_LINK"
}

mv_share () {
    if [ -z "$1" ]
    then
        echo "-\n\n\n Error!!!! Parameter 1 is missing\n"
        exit 0
    else
        echo "mv_share-P1 is \"$1\"."
    fi

    SRC=$1
    SRC_NAME=$(basename $1)

	[[ -f "$1" ]] && echo "" || echo -e "\n\nCheck OUTPUT dir, is it correct? ex. 'output'\n\n"

    if [ "$2" ]
    then
        echo "mv_share-P2 is \"$2\"."
    else
        echo "EMPTY"
        exit 0
    fi

	SHARE_DIR=/opt/maxim/share/"$2"

	mkdir -p $SHARE_DIR

	cp "$1" /opt/maxim/share/"$2"/"$SRC_NAME"
}



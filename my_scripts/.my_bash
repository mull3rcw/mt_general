bkernel () {
ldecmd build kernel;
    if [ -z "$1" ]
             then
                echo "-Parameter 1 is missing"
                exit 0
             else
                echo "-Parameter 1 is \"$1\"."
                copy2tftp "system/linux/arch/arm/boot/uImage" "$1"
                copy2tftp "system/linux/arch/arm/boot/uImage.signed" "$1"
             fi
}


mv_img () {
    if [ -z "$1" ]
             then
				echo "-Parameter 1 is missing"
				exit 0
             else
				echo "-Moving all images to \"$1\"."
				copy2tftp "system/linux/arch/arm/boot/uImage" "$1"
				copy2tftp "system/linux/arch/arm/boot/uImage.signed" "$1"
				copy2tftp "user/images/rootfs.ubifs.img" "$1"
				mv_share "system/linux/arch/arm/boot/uImage.signed" "$1"
				mv_share "system/linux/arch/arm/boot/uImage" "$1"
				mv_share "user/images/rootfs.ubifs.img" "$1"
             fi
}



